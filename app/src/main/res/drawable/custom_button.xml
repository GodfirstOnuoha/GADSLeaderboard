<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@android:color/darker_gray"/>
            <corners
                android:radius="20dp"/>
            <padding
                android:top="2dp"
                android:left="30dp"
                android:right="30dp"
                android:bottom="2dp" />
        </shape>
    </item>


    <item>
        <shape>
            <solid
                android:color="@android:color/white"/>
            <corners
                android:radius="20dp"/>
            <padding
                android:top="2dp"
                android:left="30dp"
                android:right="30dp"
                android:bottom="2dp" />
        </shape>
    </item>

</selector>