<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <corners
                android:radius="10dp"/>
            <padding
                android:top="@dimen/dimen_size_8"
                android:left="50dp"
                android:right="50dp"
                android:bottom="@dimen/dimen_size_8" />
            <stroke
                android:width="2dp"
                android:color="#e98503" />
            <solid
                android:color="@android:color/black" />
        </shape>
    </item>


    <item>
